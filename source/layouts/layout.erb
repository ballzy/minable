<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Minable" %></title>

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,600,700|Open+Sans+Condensed:300,700' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="site-wrapper">
      <div class="min-container">
        <header class="min-u-1 centered masthead">
          <div class="min-inner">
            <%= image_tag("min-logo-800w.png", :class => "main-logo", :alt =>"Minable logo")%>
            <p class="tagline">Minimal &amp; Flexible<br> Sass powered framework</p>
          </div>
        </header>
      </div>
      <%= yield %>
    </div>
    <footer class="site-footer">
      <div class="min-container">
        <div class="min-g">
          <div class="min-u-1">
            <div class="min-inner">
              <h2>Contributors</h2>

              <p>Coming soon...</p>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>